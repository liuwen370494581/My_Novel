<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white"
              android:orientation="vertical">

    <cn.bingoogolapple.bgabanner.BGABanner
        android:id="@+id/banner"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        app:banner_indicatorGravity="bottom|right"
        app:banner_placeholderDrawable="@mipmap/bookimg"
        app:banner_tipTextSize="12sp"
        app:banner_transitionEffect="accordion"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/onNewPersonGift"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="8dp">

            <ImageView
                android:id="@+id/image_new"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginLeft="15dp"
                android:src="@mipmap/bookimg"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/image_new"
                android:layout_centerInParent="true"
                android:layout_marginTop="8dp"
                android:text="排行榜"
                android:textSize="@dimen/textSize_12"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/onEveryDaySignIn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="10dp">

            <ImageView
                android:id="@+id/image_waibao"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginLeft="15dp"
                android:src="@mipmap/bookimg"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/image_waibao"
                android:layout_centerInParent="true"
                android:layout_marginTop="8dp"
                android:text="分类"
                android:textSize="@dimen/textSize_12"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/inviteAReward"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="10dp">

            <ImageView
                android:id="@+id/image_invite"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginLeft="15dp"
                android:src="@mipmap/bookimg"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/image_invite"
                android:layout_centerInParent="true"
                android:layout_marginTop="8dp"
                android:text="三江榜"
                android:textSize="@dimen/textSize_12"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/safetyGuarantee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="10dp">

            <ImageView
                android:id="@+id/image_safe"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginLeft="15dp"
                android:src="@mipmap/bookimg"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/image_safe"
                android:layout_centerInParent="true"
                android:layout_marginTop="8dp"
                android:text="专题"
                android:textSize="@dimen/textSize_12"/>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>